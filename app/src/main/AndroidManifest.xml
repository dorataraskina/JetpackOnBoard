<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.onboardjetpack">

    <application
        android:name=".OnBoardActivity"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OnBoardJetpack">
        <activity
            android:name=".FirstScreen"
            android:exported="false"
            android:label="@string/title_activity_first_screen"
            android:theme="@style/Theme.OnBoardJetpack" />
        <activity
            android:name=".BActivity"
            android:exported="false"
            android:label="@string/title_activity_bactivity"
            android:theme="@style/Theme.OnBoardJetpack" />
        <activity
            android:name=".OnB1Activity"
            android:exported="false"
            android:label="@string/title_activity_on_b1"
            android:theme="@style/Theme.OnBoardJetpack" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.OnBoardJetpack">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>